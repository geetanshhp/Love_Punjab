<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geetanshsharma.love_punjab.education">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/about"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10sp"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="188dp">
        <LinearLayout
            android:alpha=".95"
            android:background="#f4684d"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/eduresize"
                android:id="@+id/aboutedid"
                android:transitionName="aboutedshared"
                android:layout_margin="15dp"
                android:layout_width="160dp"
                android:layout_height="160dp" />


            <TextView
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="About Education"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/collages"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10sp"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="188dp">
        <LinearLayout

            android:alpha=".95"
            android:background="#f4684d"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/schoolresize"
                android:id="@+id/schoolid"
                android:transitionName="schoolshared"
                android:layout_margin="15dp"
                android:layout_width="160dp"
                android:layout_height="160dp" />


            <TextView
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="School"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/univerties"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10sp"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="188dp">
        <LinearLayout
            android:alpha=".95"
            android:background="#f4684d"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/educationresize"
                android:id="@+id/univerid"
                android:transitionName="univershared"
                android:layout_margin="15dp"
                android:layout_width="160dp"
                android:layout_height="160dp" />


            <TextView
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="University"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
