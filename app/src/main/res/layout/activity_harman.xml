<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geetanshsharma.love_punjab.harman">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10sp"
            android:id="@+id/image"
            android:src="@drawable/harmaresize"
            android:transitionName="harmanshared"
            android:scaleType="fitXY"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:layout_height="210dp" />

        <TextView
            android:layout_gravity="center"
            android:textColor="#FFBB00"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmanpreet"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="#FFBB00"
            android:textSize="22dp"
            android:textStyle="normal"
            android:text="@string/haran1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
