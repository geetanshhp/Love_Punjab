<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.example.geetanshsharma.love_punjab.universities">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10sp"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@drawable/educationresize"
                android:transitionName="univershared"
             android:layout_gravity="center"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Universities"
                android:layout_marginLeft="140dp"
                />
            <TextView
                android:textColor="#FFBB00"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22dp"
                android:text="@string/uni1"
                />

            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="List of Some Famous Universities in Punjab"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Cetral Univesity"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="normal"
                android:text="1.Central University of Punjab, Bathinda"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="State Univesities"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textSize="22dp"
                android:textStyle="normal"/>

            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Universities"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="22dp"
                android:textStyle="normal"
                android:text="@string/univer1"/>





        </LinearLayout>
    </ScrollView>


</RelativeLayout>
