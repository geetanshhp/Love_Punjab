<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.example.geetanshsharma.love_punjab.ranjit1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/image"
            android:scaleType="fitXY"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:layout_height="210dp"
            android:transitionName="wadalishared"
            android:src="@drawable/wadaliresize"/>
        <TextView
            android:layout_gravity="center"
            android:textColor="#FFBB00"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Wadali Brothers"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#FFBB00"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:textSize="22dp"
            android:text="@string/wadali1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>


</RelativeLayout>
