<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geetanshsharma.love_punjab.tourism">

    <android.support.v7.widget.CardView
        android:id="@+id/historical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10sp"
        android:layout_margin="5sp"
        >
        <LinearLayout
            android:alpha=".95"
            android:background="#f4684d"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/histresize"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_width="180dp"
                android:layout_height="180dp" />


            <TextView
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Historical"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25dp"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/nhistorical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10sp"
        android:layout_margin="5sp"
       >
        <LinearLayout
            android:alpha=".95"
            android:background="#f4684d"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/nonhisressize"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_width="180dp"
                android:layout_height="180dp" />


            <TextView
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Non-Historical"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25dp"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
