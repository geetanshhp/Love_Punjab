<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geetanshsharma.love_punjab.abouteducation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10sp"
                android:layout_width="210dp"
                android:layout_gravity="center"
                android:transitionName="aboutedshared"

                android:layout_height="210dp"
                android:src="@drawable/eduresize"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:text="Education In Punjab"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="normal"
                android:textSize="22dp"
                android:text="@string/education1"/>
            <TextView
                android:textColor="#FFBB00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="normal"
                android:textSize="22dp"
                android:text="@string/educatioon4"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
